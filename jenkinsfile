pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build frontend') {
            steps {
                script {
                    dir('DevOps_Project_Front') {
                        sh('npm install')
                        sh('npm run build')
                    }
                }
            }
        }
        stage('Build and test backend') {
            when {
                branch 'GhaziBOUZID-4Twin1-CyberDev'
            }
            steps {
                script {
                    dir('DevOps_Project') {
                        sh('mvn clean install')
                    }
                }
            }
        }
        stage('MVN SONARQUBE') {
            steps {
                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar -Dmaven.test.skip=true';
            }
        }
        stage('Run backend') {
            when {
                branch 'GhaziBOUZID-4Twin1-CyberDev'
            }
            steps {
                script {
                    dir('DevOps_Project') {
                        sh('mvn spring-boot:run &')
                    }
                }
            }
        }
    }
}
