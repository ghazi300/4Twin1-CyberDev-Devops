pipeline {
    agent any

    environment {
        dockerHubUsername = credentials('ghazi100')
        dockerHubPassword = credentials('Ghazi.200')
        imageName = 'ghazi100/springangularapp'
        imageTag = '5.0'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build frontend') {
            steps {
                dir('DevOps_Project_Front') {
                    sh('npm install')
                    sh('npm run build')
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'scanner'
                    withSonarQubeEnv {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }

        stage('Build and test backend') {
            when {
                branch 'GhaziBOUZID-4Twin1-CyberDev'
            }
            steps {
                dir('DevOps_Project') {
                    sh('mvn clean test')
                }
            }
        }

        stage('Building images') {
            steps {
                script {
                    sh('docker-compose build')
                }
            }
        }

        stage('Deploy to Docker Hub') {
            steps {
                script {
                    withEnv(["DOCKERHUB_USERNAME=${dockerHubUsername}", "DOCKERHUB_PASSWORD=${dockerHubPassword}"]) {
                        sh("docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD")
                        sh("docker tag springangularapp:5.0 ${imageName}:${imageTag}")
                        sh("docker push ${imageName}:${imageTag}")
                    }
                }
            }
        }
    }
}
