pipeline {
    agent any

    environment {
        dockerHubUsername = 'ghazi100'
        dockerHubPassword = 'Ghazi.200'
        imageName = 'ghazi100/springangularapp'
        imageTag = '5.0'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build frontend') {
            steps {
                dir('DevOps_Project_Front') {
                    sh('npm install')
                    sh('npm run build')
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'scanner'
                    withSonarQubeEnv {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }

        stage('Build and test backend') {
            when {
                branch 'GhaziBOUZID-4Twin1-CyberDev'
            }
            steps {
                dir('DevOps_Project') {
                    sh('mvn clean install')
                }
            }
        }

        stage('Building images') {
            steps {
                script {
                    sh('docker-compose build')
                }
            }
        }

        stage('Deploy to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', dockerHubUsername, dockerHubPassword) {
                        sh("docker tag springangularapp:5.0 ${imageName}:${imageTag}")
                        sh("docker push ${imageName}:${imageTag}")
                    }
                }
            }
        }
    }
}
