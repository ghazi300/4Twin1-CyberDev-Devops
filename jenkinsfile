pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build frontend') {
            steps {
                script {
                    dir('DevOps_Project_Front') {
                        sh('npm install')
                        sh('ng build')
                    }
                }
            }
        }
        stage('Build and test backend') {
            when {
                branch 'GhaziBOUZID-4Twin1-CyberDev'
            }
            steps {
                script {
                    dir('DevOps_Project') {
                        sh('mvn clean install')
                    }
                }
            }
        }
        stage('Run backend') {
            when {
                branch 'GhaziBOUZID-4Twin1-CyberDev'
            }
            steps {
                script {
                    dir('DevOps_Project') {
                        sh('mvn spring-boot:run &')
                    }
                }
            }
        }
    }
}
